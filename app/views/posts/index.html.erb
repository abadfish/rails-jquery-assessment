<div class="wrapper clearfix">

  <section class="col-md-4 first" id="news">
    Top Headlines from: <br />
    <%= render partial: '/news/news', local: {current: @current} %>
  </section>

  <section class="col-md-8">
    <div class="post-spacer">

      <div id="posts">
        <%= render partial: 'form', locals: {post: @post} %>
      </div>
      <br />

        <% @posts.each do |post| %>
          <%= render partial: "post", locals: {post: post} %><br />
        <% end %>

    </div>
  </section>
</div>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    var id = $(this).data("id");
    $.get("/posts/" + id + "/post_data", function(data) {
      $("#body-" + id).html(data["content"]);
    });
  });
});
</script>
